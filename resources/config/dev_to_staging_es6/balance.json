{
    "disable_cleaner": true,
    "zones": [
        {
            "name": "spot",
            "risky": true,
            "shards": 2
        },
        {
            "name": "primary",
            "risky": false,
            "busy": true,  // keep primaries off this zone
            "shards": 1
        }
    ],
    "nodes": [
        {
            "name": "1",
            "disk": 0,
            "memory": 0
        },
        {
            "name": "2",
            "disk": 0,
            "memory": 0
        },
        {
            "name": "3",
            "disk": 0,
            "memory": 0
        }
    ],
    "allocate": [
        {
            "name": ".monitoring-es*",
            "zone": "spot",
            "shards": 1
        },
        {
            "name": "saved_queries*",
            "zone": "spot",
            "shards": 5
        },
        {
            "name": "coverage2*",
            "zone": "spot",
            "shards": 1
        },
        {
            "name": "repo*",
            "zone": "spot",
            "shards": 3
        },
        {
            "name": "unittest*",
            "zone": "spot",
            "shards": 1
        }
    ],
    "connect": {
        //USED IN Fabric's `env` GLOBAL CONFIG OBJECT
        "user": "ec2-user",
        "key_filename": "e:/activedata.pem",
        "disable_known_hosts": true,
        "host_string": "",
        "port": 22,
        "password": "",
        "banner_timeout": 30
    },
    "finally": {
        "/_cluster/settings": [
            {
                "transient": {
                    "cluster.routing.allocation.disk.threshold_enabled": true,
                    "cluster.routing.allocation.disk.watermark.low": "40%"
                }
            },
            {"persistent": {"cluster.routing.allocation.enable": "all"}}
        ]
    },
    "replication_priority": [
        "saved*",
        "branches*",
        "repo*",
        "test_failures*",
        "fx-test*",
        "coverage-summary*",
        "job*",
        "task*",
        "treeherder*"
    ],
    "elasticsearch": {
        "host": "http://localhost",
        "port": 9201,
        "debug": true
    },
    "constants": {
        "pyLibrary.env.http.default_headers": {
            "referer": "https://wiki.mozilla.org/Auto-tools/Projects/ActiveData",
            "Content-Type": "application/json"
        },
        "balance.ACCEPT_DATA_LOSS": true
    },
    "debug": {
        "trace": true,
        "cprofile": {
            "enabled": false,
            "filename": "./results/profile.tab"
        },
        "log": [
            {
                "log_type": "console"
            },
            {
                "log_type": "ses",
                "max_interval": "5minute",
                "from_address": "klahnakoski@mozilla.com",
                "to_address": "klahnakoski@mozilla.com",
                "subject": "[ALERT][DEV] Problem with esShardBalancer",
                "$ref": "file://~/private.json#aws_credentials"
            }
        ]
    }
}
